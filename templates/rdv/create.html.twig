{% extends 'base.html.twig' %}

{% form_theme formRdv 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>
        {% if (editMode) %}
            Modification d'un rendez-vous
        {% else %}
            Creation d'un rendez-vous
        {% endif %}
    </h1>

    {{ form_start(formRdv) }}

    {{ form_row(formRdv.type, { 'attr': {'placeholder': 'Type de rendez-vous'}}) }}

    {{ form_row(formRdv.date, { 'attr': {'placeholder': 'Date'}}) }}

    {{ form_row(formRdv.heure) }}

    {{ form_row(formRdv.lieu, { 'attr': {'placeholder': 'Lieu'}}) }}

    <button type="submit" class="btn btn-success">
    {% if (editMode) %}
        Enregistrer les modifications
    {% else %}
        Ajouter le rendez-vous
    {% endif %}
    </button>

    {{ form_end(formRdv) }}

{% endblock %}