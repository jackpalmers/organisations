{% extends 'base.html.twig' %}

{% block title %} Liste des rendez-vous {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        table {
            text-align: center;
        }

        th {
            font-size: 20px;
            background-color: #AAAAAA;
        }
        .table-bordered {
            border: 1px solid #ddd !important;
        }

        table caption {
            padding: .5em 0;
        }

        @media screen and (max-width: 767px) {
            table caption {
                display: none;
            }
        }
        .th {
            background-color: sandybrown;
        }
    </style>
{% endblock %}


{% block body %}
    <br/>
        <table class="table table-bordered table-hover">
            <thead>
            <th class="th" colspan="4">Rendez-vous à venir</th>
            <tr>
                <th>Type</th>
                <th>Date</th>
                <th>Lieu</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% if rdvs is not empty %}
                {% for rdv in rdvs %}
                    <tr>
                        <td>{{ rdv.type }}</td>
                        <td>{{ rdv.date | date('d/m/Y') }} à {{ rdv.heure | date('H:i')}}</td>
                        <td>{{ rdv.lieu }}</td>
                        <td style="width: 250px;"><a href="{{ path('rdv_edit', {'id': rdv.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('rdv_delete', {'id': rdv.id}) }}" class="btn btn-danger">Supprimer</a></td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun rendez-vous à venir trouvé</td>
                </tr>
            {% endif %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5" class="text-center"><a href="{{ ('rdvPasse') }}">Consultez les rendez-vous passés</a></td>
            </tr>
            </tfoot>
        </table>
{% endblock %}
