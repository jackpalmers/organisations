<!DOCTYPE html>
<head>
    <title>Login V17</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="../../formLoginStyle/images/icons/favicon.ico"/>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/css/util.css">
    <link rel="stylesheet" type="text/css" href="../../formLoginStyle/css/main.css">
    <!--===============================================================================================-->
</head>

{% block body %}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action="{{ path('security_login') }}" method="post">
                    {% if error %}
                    <span class="login100-form-title p-b-34" style="color:red;">Informations saisies incorrect</span>
                    {% endif %}
                        <span class="login100-form-title p-b-34">Connexion</span>

                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                        <input placeholder="Nom d'utilisateur" name="_username" type="text" class="form-control" required>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                        <input placeholder="Mot de passe" name="_password" type="password" class="form-control" required>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Se connecter
                        </button>
                    </div>
                    <div class="w-full text-center p-t-27 p-b-239">
                        {# Ajouter une page afin que l'utilisateur puisse réinitialiser son mot de passe #}
                        <a href="#" class="txt2">Nom d'utilisateur / mot de passe</a>
                        <span class="txt1">oublié ?</span>
                    </div>
                    <div class="w-full text-center">
                        <a href="{{ 'inscription' }}" class="txt3">
                            S'inscrire
                        </a>
                    </div>
                </form>

                <div class="login100-more" style="background-image: url({{ asset('formLoginStyle/images/foret.jpg') }});"></div>
            </div>
        </div>
    </div>
{% endblock %}