{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form action="" method="post">
        <div class="form-group">
            <input placeholder="Nom d'utilisateur" name="_username" type="text" class="form-control" required>
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" name="_password" type="password" class="form-control" required>
        </div>
        <div>
            <button type="submit" class="btn btn-info">Connexion</button>
            <a class="btn btn-success" href="{{ 'inscription' }}">Inscription</a>
        </div>
    </form>
{% endblock %}