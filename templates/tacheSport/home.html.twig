{% extends 'base.html.twig' %}

{% block title %} Liste des activités sportive {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        table {
            text-align: center;
        }

        th {
            font-size: 20px;
            background-color: #AAAAAA;
        }
        .table-bordered {
            border: 1px solid #ddd !important;
        }

        table caption {
            padding: .5em 0;
        }

        @media screen and (max-width: 767px) {
            table caption {
                display: none;
            }
        }
        .th {
            background-color: sandybrown;
        }
    </style>
{% endblock %}


{% block body %}
    <br/>
    <table class="table table-bordered table-hover">
        <thead>
        <th class="th" colspan="4">Activités sportives</th>
        <tr>
            <th>Sport</th>
            <th>Durée / Nombre</th>
            <th>Date séance</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for tacheSport in tachesSport %}
            <tr>
                <td>{{ tacheSport.nomSport }}</td>
                {% if tacheSport.duree is null %}
                    <td>{{ tacheSport.nombre }} </td>
                {% else %}
                    <td>{{ tacheSport.duree | date('i:s') }} min</td>
                {% endif %}
                <td>{{ tacheSport.dateSeance | date('d/m/Y') }}</td>
                <td style="width: 250px;"><a href="{{ path('tacheSport_edit', {'id': tacheSport.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('tacheSport_delete', {'id': tacheSport.id}) }}" class="btn btn-danger">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="5" class="text-center">Ce récapitulatif vous est proposé par la CucusIncorporation</td>
        </tr>
        </tfoot>
    </table>
{% endblock %}
